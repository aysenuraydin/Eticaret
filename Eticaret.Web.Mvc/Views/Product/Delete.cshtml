@model Product
@{
    ViewData["Title"] = "Delete Product";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr>
    <h3>Ürün Silinsin mi?</h3>
    <div>
        <h4>Silinecek Ürün Bilgileri</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dt class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dt>
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Details)
            </dt>
            <dt class="col-sm-9">
                @Html.DisplayFor(model => model.Details)
            </dt>
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.StockAmount)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.StockAmount)
            </dd>
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.Enabled)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Enabled)
            </dd>
            <dt class="col-sm-3">
                Satıcı
                @Html.DisplayNameFor(model => model.SellerFk!.Email)
            </dt>
            <dt class="col-sm-9">
                @Html.DisplayFor(model => model.SellerFk!.Email)
            </dt>
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.CategoryFk!.Name)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CategoryFk!.Name)
            </dd>
            <dd class="col-sm-3">
                Comment Count
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductComments.Count)
            </dd>
            <dd class="col-sm-3">
                Order Count
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.OrderItems.Count)
            </dd>
            <dd class="col-sm-3">
                Cart Count
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CartItems.Count)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Sil" class="btn btn-outline-danger" /> |
            <a asp-action="Index">Listeye Dön</a>
        </form>
    </div>
</div>