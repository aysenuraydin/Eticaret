@model RegisterViewModel
@{
    Layout = "_ProfileLayout";
}

<div class="p-5 m-4">
    <div class="row">
        <div class="col-md-6 border p-5 shadow offset-3">
            <div class="avatar text-center">
                <i class="fa-solid fa-circle-user"></i>
            </div>
            <form asp-action="Edit" asp-Controller="Profile" class="user">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control form-control-user" placeholder="Ad">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control form-control-user" placeholder="Soyadı">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control form-control-user" placeholder="Email Adresi">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control form-control-user" placeholder="Parola">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-user" id="exampleFirstName"
                            placeholder="Parola">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group my-3">
                    <input type="submit" value="Değişiklikleri kaydet" class="btn btn-primary btn-user btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar {
            font-size: 150px;
            padding: 20px;
        }
    </style>
}