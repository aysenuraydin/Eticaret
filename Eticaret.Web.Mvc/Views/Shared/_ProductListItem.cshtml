@model ProductListDTO
@{
    var imgSrc = "";
    if (Model.ImageUrl == null)
    {
        imgSrc = "https://via.placeholder.com/300x400";
    }
    else
    {
        imgSrc = "/assets/img/" + Model.ImageUrl;
    }
}
<div class="block2">
    <div class="block2-pic hov-img0">
        <div class="image-container">
            <img src="@imgSrc" alt="IMG-PRODUCT">
        </div>
        <a asp-action="ProductModal" asp-Controller="Home" asp-route-id="@Model.Id"
            class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
            İncele
        </a>
    </div>
    <div class="block2-txt flex-w flex-t p-t-14">
        <div class="block2-txt-child1 flex-col-l ">
            <a class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6" asp-controller="Home" asp-action="ProductDetail"
                asp-route-id="@Model.Id">
                @Model.Name
            </a>
            <span class="stext-105 cl3">
                @Model.Price ₺
            </span>
        </div>
        <div class="block2-txt-child2 flex-r p-t-3">
            <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                <img class="icon-heart1 dis-block trans-04" src="/assets/img/icons/icon-heart-01.png" alt="ICON">
                <img class="icon-heart2 dis-block trans-04 ab-t-l" src="/assets/img/icons/icon-heart-02.png" alt="ICON">
            </a>
        </div>
    </div>
</div>
