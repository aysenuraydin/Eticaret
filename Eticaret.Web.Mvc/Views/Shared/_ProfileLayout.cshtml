@{
    Layout = "_Layout";
}

<div class="container" style="margin-top:150px !important;">
    <div class="row">
        <div class="col-md-2" style="background-color:#cccccc !important;">

            <li class="p-4 mt-4">
                <a class="" asp-controller="Profile" asp-action="Details">
                    <i class="fa-solid fa-user"></i>
                    <span>Profilim</span>
                </a>
            </li>
            <hr class="sidebar-divider my-2">
            <li class="p-4">
                <a class="" asp-controller="Profile" asp-action="Edit">
                    <i class="fa-solid fa-gear"></i>
                    <span>Hesap Bilgileri </span>
                </a>
            </li>
            <hr class="sidebar-divider my-2">
            <li class="p-4">
                <a class="" asp-controller="Profile" asp-action="MyOrders">
                    <i class="fa-solid fa-bell"></i>
                    <span>Siparişlerim </span>
                </a>
            </li>
            <hr class="sidebar-divider my-2">
            <li class="p-4">
                <a class="" asp-controller="Cart" asp-action="Edit">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span>Sepetim </span>
                </a>
            </li>
            <hr class="sidebar-divider my-2">
            <li class="p-4">
                <a class="" href="#">
                    <i class="fa-solid fa-heart"></i>
                    <span>Favorilerim </span>
                </a>
            </li>
            <hr class="sidebar-divider my-2">
            <li class="p-4">
                <a class="" href="#">
                    <i class="fa-regular fa-comment"></i>
                    <span>Yorumlarım </span>
                </a>
            </li>

            @if (User.IsInRole("admin"))
            {
                <hr class="sidebar-divider my-2">
                <li class="p-4">
                    <a class="text-primary" asp-controller="Home" asp-action="Index" asp-area="Admin">
                        <i class="fas fa-fw fa-table"></i>
                        <span>Admin Paneli </span>
                    </a>
                </li>
            }
            @if (User.IsInRole("seller"))
            {
                <hr class="sidebar-divider my-2">
                <li class="p-4">
                    <a class="text-primary" asp-controller="Product" asp-action="Index">
                        <svg width="20" height="16" viewBox="0 0 473.001 473">
                            <g>
                                <path
                                    d="M451.426,315.003c-0.517-0.344-1.855-0.641-2.41-0.889l-201.09-88.884v-28.879c38.25-4.6,57.136-29.835,57.136-62.28 c0-35.926-25.283-63.026-59.345-63.026c-35.763,0-65.771,29.481-65.771,64.384c0,6.005,4.973,10.882,10.978,10.882 c1.788,0,3.452-0.535,4.934-1.291c3.519-1.808,6.024-5.365,6.024-9.591c0-22.702,20.674-42.62,44.217-42.62 c22.003,0,37.982,17.356,37.982,41.262c0,23.523-19.011,41.262-44.925,41.262c-6.005,0-10.356,4.877-10.356,10.882v21.267v21.353 c0,0.21-0.421,0.383-0.401,0.593L35.61,320.55C7.181,330.792-2.554,354.095,0.554,371.881 c3.194,18.293,18.704,30.074,38.795,30.074H422.26c23.782,0,42.438-12.307,48.683-32.942 C477.11,348.683,469.078,326.766,451.426,315.003z M450.115,364.031c-3.452,11.427-13.607,18.8-27.846,18.8H39.349 c-9.725,0-16.104-5.394-17.5-13.368c-1.587-9.104,4.265-22.032,21.831-28.42l199.531-94.583l196.844,87.65 C449.303,340.717,453.434,353.072,450.115,364.031z" />
                            </g>

                        </svg>
                        <span>Ürünlerim </span>
                    </a>
                </li>
            }
            <hr class="sidebar-divider my-2">
            </li>
            <li class="p-4">
                <a class="" asp-controller="Auth" asp-action="Logout">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Güvenli Çıkış </span>
                </a>
            </li>

        </div>
        <div class="col-md-10">
            @RenderBody()
        </div>
        @RenderSection("Styles", false);
    </div>
</div>
