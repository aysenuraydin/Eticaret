{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "pathFormat": "logs/{Date}-logs.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} - {RequestMethod} {RequestPath} responded with {StatusCode} in {Elapsed:0.0000}ms{NewLine}",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "ExternalApis": {
    "FileApi": {
      "Name": "FileApi",
      "BaseUrl": "http://localhost:5112",
      "TimeoutSeconds": 5,
      "UseJwt": false
    },
    "DataApi": {
      "Name": "DataApi",
      "BaseUrl": "http://localhost:5177",
      "TimeoutSeconds": 5,
      "UseJwt": true
    }
  }
}
