@model Product
@{
    ViewData["Title"] = "Delete Product";
}
<h1>@ViewData["Title"]</h1>
<hr>


<h3>Ürün Silinsin mi?</h3>
<div class="row">
    <div class="col-4">
        @if (!Model.ProductImages.Any())
        {
            <img src="https://via.placeholder.com/300x300" alt="Ürun resmi">
        }
        else
        {
            <div class="p-l-25 p-r-30 p-lr-0-lg">
                <div class="wrap-slick3 flex-sb flex-w">
                    <div class="wrap-slick3-dots"></div>
                    <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                    <div class="slick3 gallery-lb">
                        @if (Model.ProductImages != null && Model.ProductImages.Any())
                        {
                            @foreach (var img in Model.ProductImages)
                            {
                                <div class="item-slick3" data-thumb="/assets/img/@img.Url">
                                    <div class="wrap-pic-w pos-relative">
                                        <img src="/assets/img/@img.Url">

                                        <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                            href="/assets/img/@img.Url">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-8">
        <h4>Silinecek Ürün Bilgileri</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dt class="col-sm-9">
                @Html.DisplayFor(model => model.Id)
            </dt>
        </dl>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dt class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dt>
        </dl>
        <dl class="row">
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Details)
            </dt>
            <dt class="col-sm-9">
                @Html.DisplayFor(model => model.Details)
            </dt>
        </dl>
        <dl class="row">
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.StockAmount)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.StockAmount)
            </dd>
        </dl>
        <dl class="row">
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
        </dl>
        <dl class="row">
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.Enabled)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Enabled)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-3">
                Satıcı
                @Html.DisplayNameFor(model => model.SellerFk!.Email)
            </dt>
            <dt class="col-sm-9">
                @Html.DisplayFor(model => model.SellerFk!.Email)
            </dt>
        </dl>
        <dl class="row">
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.CategoryId)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CategoryId)
            </dd>
        </dl>
        <dl class="row">
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProductComments)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductComments.Count)
            </dd>
        </dl>
        <dl class="row">
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.OrderItems)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.OrderItems.Count)
            </dd>
        </dl>
        <dl class="row">
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.CartItems)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CartItems.Count)
            </dd>
        </dl>
        </dl>
        <dl class="row">
            <dd class="col-sm-3">
                @Html.DisplayNameFor(model => model.IsConfirmed)
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IsConfirmed)
            </dd>
        </dl>


        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Sil" class="btn btn-outline-danger" /> |
            <a asp-action="List">Listeye Dön</a>
        </form>
    </div>
</div>