@model IEnumerable<AdminProductCommentListDTO>
@{
    ViewData["Title"] = "List of Comment";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col">
        @* <a asp-action="Create" asp-controller="Category" class="btn btn-outline-primary">Yeni Ekle</a> *@
    </div>
    <div class="col">
        @* <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" action="/Admin/Products/Index">
        <input id="ara" name="search" type="search" class="form-control form-control-dark" placeholder="Ara..."
        aria-label="Search">
        </form> *@
    </div>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StarCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                Kullanıcı
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StarCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-@(item.IsConfirmed?"danger":"primary") btn-m" asp-action="Approve"
                            asp-Controller="Comment" asp-route-id="@item.Id">@(item.IsConfirmed
                    ? "Onayı Kladır" : "Onayla")</a>

                        <a class="btn btn-sm btn-outline-danger btn-m" asp-action="Delete" asp-Controller="Comment"
                            asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>