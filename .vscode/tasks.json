{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildbackend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Eticaret.Api/Eticaret.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "cleanbackend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/Eticaret.Api/Eticaret.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildfrontend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Eticaret.Web.Mvc/Eticaret.Web.Mvc.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "cleanfrontend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/Eticaret.Web.Mvc/Eticaret.Web.Mvc.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/e-ticaret-mvc.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/e-ticaret-mvc.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "rebuildbackend",
            "dependsOn": [
                "cleanbackend",
                "buildbackend"
            ]
        },
        {
            "label": "rebuildfrontend",
            "dependsOn": [
                "cleanfrontend",
                "buildfrontend"
            ]
        }
    ]
}